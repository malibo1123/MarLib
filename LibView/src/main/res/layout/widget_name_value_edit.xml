<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="android.widget.RelativeLayout">
    <TextView android:id="@+id/ControlNameValueEdit_NameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"/>
    <ImageView android:id="@+id/ControlNameValueEdit_RightIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"/>
	<EditText android:id="@+id/ControlNameValueEdit_ValueEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ControlNameValueEdit_NameText"
        android:layout_toLeftOf="@id/ControlNameValueEdit_RightIcon"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:background="@null"/>
</merge>
