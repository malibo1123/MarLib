<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".WidgetExample">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@android:color/white"
        android:paddingBottom="30dp">
        <com.mar.lib.widget.EmbellishTitle
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            custom:embellishTitleText="播放暂停动画View示例"/>
        <com.mar.lib.enviews.ENPlayView
            android:id="@+id/view_play"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            custom:play_line_color="#FF000000"
            custom:play_bg_line_color="#444a4f"
            custom:play_line_width="14"
            custom:play_bg_line_width="12"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <Button
                android:id="@+id/btn_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="播放"/>
            <Button
                android:id="@+id/btn_pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="暂停"/>
        </LinearLayout>

        <com.mar.lib.widget.EmbellishTitle
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            custom:embellishTitleText="下载动画View示例"/>
        <com.mar.lib.enviews.ENDownloadView
            android:id="@+id/view_download"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            custom:download_line_color="#ffffff"
            custom:download_bg_line_color="#3a3f45"
            custom:download_text_color="#ffffff"
            custom:download_line_width="9"
            custom:download_bg_line_width="9"
            custom:download_text_size="14"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <Button
                android:id="@+id/btn_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始"/>
            <Button
                android:id="@+id/btn_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="重置"/>
        </LinearLayout>

        <com.mar.lib.widget.EmbellishTitle
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            custom:embellishTitleText="加载动画View示例"/>
        <com.mar.lib.enviews.ENLoadingView
            android:id="@+id/view_loading"
            android:layout_width="200dp"
            android:layout_height="140dp"
            android:layout_marginTop="20dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <Button
                android:id="@+id/btn_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="显示"/>
            <Button
                android:id="@+id/btn_hide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="隐藏"/>
        </LinearLayout>

        <com.mar.lib.widget.EmbellishTitle
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            custom:embellishTitleText="音量View示例"/>
        <com.mar.lib.enviews.ENVolumeView
            android:id="@+id/view_volume"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            custom:volume_line_color="#FF000000"
            custom:volume_line_width="10"
            custom:volume_bg_line_color="#FF883333"
            custom:volume_bg_line_width="10"/>
        <SeekBar
            android:id="@+id/sb_volume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"/>

        <com.mar.lib.widget.EmbellishTitle
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            custom:embellishTitleText="搜索View示例"/>
        <com.mar.lib.enviews.ENSearchView
            android:id="@+id/view_search"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            custom:search_line_color="#FF000000"
            custom:search_line_width="9"
            custom:search_dot_size="3" />
        <Button
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索"
            android:layout_marginTop="20dp" />

        <com.mar.lib.widget.EmbellishTitle
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            custom:embellishTitleText="刷新View示例"/>
        <com.mar.lib.enviews.ENRefreshView
            android:id="@+id/view_refresh"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            custom:refresh_line_color="#FF000000"
            custom:refresh_line_width="14"/>
        <Button
            android:id="@+id/btn_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="开始刷新"/>

        <com.mar.lib.widget.EmbellishTitle
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            custom:embellishTitleText="ScrollView示例"/>
        <com.mar.lib.enviews.ENScrollView
            android:id="@+id/view_scroll"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            custom:scroll_line_color="#FF000000"
            custom:scroll_bg_line_color="#FFff0000"
            custom:scroll_line_width="10"
            custom:scroll_bg_line_width="10"
            custom:scroll_is_selected="true"
            custom:scroll_view_translation_x="16"/>
        <Button
            android:id="@+id/btn_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="切换"
            android:layout_marginTop="20dp" />
    </LinearLayout>
</ScrollView>